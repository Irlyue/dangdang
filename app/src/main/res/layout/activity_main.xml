<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/time_range_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/left_text_view"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/left_default_time"
            android:onClick="showTimePicker"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/right_text_view"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:text="@string/right_default_time"
            android:onClick="showTimePicker"
            android:layout_toRightOf="@+id/left_text_view"
            android:layout_toEndOf="@+id/left_text_view"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"
        android:layout_centerHorizontal="true"
        android:text="start"
        android:layout_below="@+id/time_range_text_view"
        app:layout_constraintEnd_toEndOf="parent" />

